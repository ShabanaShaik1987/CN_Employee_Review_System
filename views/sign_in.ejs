<link rel="stylesheet" href="/css/sign.css">
<div class="mainContainer ">
    <div class="companyLogo">
        <img src="../images/Employee_Portal.jpg">
    </div>

    <div class="formInput">
        <h1> ERS  Portal</h1>
        <form method="POST" action="/users/create-session" >
            <input type="email" name="email" placeholder="Enter email" required><br>
            <input type="password" name="password" placeholder="Enter password" required><br>
            
            <div class= 'buttons'>
                <div class="forgetPassword"><a href="/users/forgotPassword"> Forgot Password </a></div>
                <div class = 'submitButtons'><button type="submit">Sign In</button></div>
                
            </div>

            <div class="extraStuff">
                <small> Don't have account ?</small>
                <a href="/users/sign-up"> Sign Up</a>
            </div>
    </div>
</div> 